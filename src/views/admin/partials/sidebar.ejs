<div id="sidebar" class="bg-light border-right">
  <ul class="list-group list-group-flush">
    <li class="list-group-item <%= activePage === 'articles' ? 'active' : '' %>">
      <a href="/admin/news" class="text-decoration-none">Quản lý bài viết</a>
    </li>
    <li class="list-group-item <%= activePage === 'users' ? 'active' : '' %>">
      <a href="/admin/user" class="text-decoration-none">Quản lý người dùng</a>
    </li>
  </ul>
</div>


<script>
  document.querySelector('#toggle-sidebar').addEventListener('click', () => {
    const sidebar = document.getElementById('sidebar');
    sidebar.classList.toggle('d-none');
  });
</script>