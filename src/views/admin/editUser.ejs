<%- include('./partials/header') %>
  <div class="d-flex">
    <%- include('./partials/sidebar') %>
      <div class="container mt-2">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5>Sửa Người Dùng</h5>
          <a href="/admin/user">
            <button class="btn btn-secondary">Quay Lại</button>
          </a>
        </div>

        <div class="card">
          <div class="card-body">
            <form action="/admin/user/edit/<%= user._id %>" method="POST">
              <!-- Tên người dùng -->
              <div class="mb-3">
                <label for="username" class="form-label">Tên Người Dùng</label>
                <input type="text" id="username" name="username" class="form-control" value="<%= user.username %>"
                  required>
              </div>

              <!-- Email -->
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-control" value="<%= user.email %>" required>
              </div>

              <!-- Vai trò -->
              <div class="mb-3">
                <label for="role" class="form-label">Vai Trò</label>
                <select id="role" name="role" class="form-select" required>
                  <option value="admin" <%=user.role==='admin' ? 'selected' : '' %>>Quản Trị</option>
                  <option value="user" <%=user.role==='user' ? 'selected' : '' %>>Người Đọc</option>
                </select>
              </div>

              <!-- Mật khẩu (Không bắt buộc sửa đổi) -->
              <div class="mb-3">
                <label for="password" class="form-label">Mật Khẩu (Để trống nếu không đổi)</label>
                <input type="password" id="password" name="password" class="form-control"
                  placeholder="Nhập mật khẩu mới nếu muốn đổi">
              </div>

              <!-- Nút Lưu -->
              <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
            </form>
          </div>
        </div>
      </div>
  </div>
  </body>

  </html>